<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@drawable/select_button"
        android:text="로그아웃"
        android:textSize="10sp"
        android:layout_gravity="right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/align"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gmarketsans"
            android:text="BORA 미니 가계부"
            android:textAlignment="center"
            android:textColor="#5107B0"
            android:textSize="30sp" />

    </RelativeLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        app:mcv_tileHeight="50dp"
        app:mcv_tileWidth="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        app:mcv_selectionColor="#a362f8"
        app:mcv_showOtherDates="other_months"
        android:showWeekNumber="false" />

    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailTv1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="항목"
            android:gravity="center"
            android:background="#5107b0"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsans"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTv2"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:background="#5107b0"
            android:fontFamily="@font/gmarketsans"
            android:text="그룹"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTv3"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="#5107b0"
            android:fontFamily="@font/gmarketsans"
            android:text="카테고리"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTv4"
            android:layout_width="80dp"
            android:fontFamily="@font/gmarketsans"
            android:layout_height="25dp"
            android:text="금액"
            android:background="#5107b0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/detailTv5"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:fontFamily="@font/gmarketsans"
            android:text="메모"
            android:background="#5107b0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"/>

</LinearLayout>